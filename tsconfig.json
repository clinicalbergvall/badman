{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node", // Changed from bundler to node for better React type resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/pages/*": ["src/pages/*"],
      "@/lib/*": ["src/lib/*"],
      "@/contexts/*": ["src/contexts/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "react", "react-dom"]
  },
  "include": ["src", "./src/types/**/*", "./src/vite-env.d.ts", "./src/types/react-default-import.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "skipLibCheck": true
}
